<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="minyoung9913.kr.hs.emirim.gridcalculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text = "단순 계산기"
        />
    <EditText
        android:id ="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id ="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/gb_1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="0"
            />
        <Button
            android:id="@+id/gb_2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
            />
        <Button
            android:id="@+id/gb_3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
            />
        <Button
            android:id="@+id/gb_4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
            />
        <Button
            android:id="@+id/gb_5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            />
        <Button
            android:id="@+id/gb_6"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"
            />
        <Button
            android:id="@+id/gb_7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"
            />
        <Button
            android:id="@+id/gb_8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"
            />
        <Button
            android:id="@+id/gb_9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"
            />
        <Button
            android:id="@+id/gb_10"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"
            />
    </GridLayout>
    <Button
        android:id="@+id/but_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더하기"
        />
    <Button
        android:id="@+id/but_minus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빼기"
        />
    <Button
        android:id="@+id/but_multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="곱하기"
        />
    <Button
        android:id="@+id/but_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나누기"
        />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#c93a89"
        android:textSize="30sp"
        />
</LinearLayout>
